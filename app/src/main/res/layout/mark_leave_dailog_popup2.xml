<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:weightSum="10">
    <!--android:background="@drawable/dialog_background_inset"-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="8.5"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="5dp"
                android:text="Select"
                android:textColor="@color/colorPrimaryDark"
                android:textSize="22sp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_leave_days"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="3"
                    android:background="@drawable/tv_bottom_line_light"
                    android:gravity="center"
                    android:padding="10dp"
                    android:text="Leave Days"
                    android:textColor="@color/colorPrimary" />

                <TextView
                    android:id="@+id/tv_sessions"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="3"
                    android:background="@drawable/tv_bottom_line_dark"
                    android:gravity="center"
                    android:padding="10dp"
                    android:text="Sessions"
                    android:textColor="@color/colorPrimaryDark" />

                <TextView
                    android:id="@+id/tv_reason"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="3"
                    android:background="@drawable/tv_bottom_line_light"
                    android:gravity="center"
                    android:padding="10dp"
                    android:text="Reason"
                    android:textColor="@color/colorPrimaryDark" />
            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="20dp"
            android:orientation="vertical">
            <android.support.v7.widget.CardView
                android:id="@+id/id_card_item1"
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                app:cardBackgroundColor="#14BBD3"
                app:cardCornerRadius="10dp"
                android:transitionName="sessionTransition">

                <LinearLayout
                    android:id="@+id/cardview_item"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">


                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="2.5">

                        <TextView
                            android:id="@+id/tv_item_date"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:gravity="center"
                            android:text="23"
                            android:textColor="#ffffff"
                            android:textSize="50sp"
                            android:transitionName="count"/>
                    </LinearLayout>

                    <View
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_marginTop="20dp"
                        android:layout_marginBottom="20dp"
                        android:layout_weight="0.05"
                        android:background="#ffffff" />

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="7.45"
                        android:orientation="vertical"
                        android:weightSum="10">


                        <TextView
                            android:id="@+id/tv_item_hospital_name"
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:layout_weight="5"
                            android:gravity="center|bottom"
                            android:text="Ankura Hospital"
                            android:textColor="#ffffff"
                            android:textSize="20sp"
                            android:transitionName="hospital"/>

                        <TextView
                            android:id="@+id/tv_item_fromtime_totime"
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:layout_marginTop="5dp"
                            android:layout_weight="5"
                            android:gravity="center|top"
                            android:text="12:00 PM - 02:45 PM"
                            android:textColor="#ffffff"
                            android:transitionName="time"/>
                    </LinearLayout>
                </LinearLayout>
            </android.support.v7.widget.CardView>
            <android.support.v7.widget.CardView
                android:id="@+id/id_card_item12"
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                app:cardBackgroundColor="#14BBD3"
                app:cardCornerRadius="10dp"
                android:transitionName="sessionTransition">

                <LinearLayout
                    android:id="@+id/cardview_item2"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">


                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="2.5">

                        <TextView
                            android:id="@+id/tv_item_date2"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:gravity="center"
                            android:text="23"
                            android:textColor="#ffffff"
                            android:textSize="50sp"
                            android:transitionName="count"/>
                    </LinearLayout>

                    <View
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_marginTop="20dp"
                        android:layout_marginBottom="20dp"
                        android:layout_weight="0.05"
                        android:background="#ffffff" />

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="7.45"
                        android:orientation="vertical"
                        android:weightSum="10">


                        <TextView
                            android:id="@+id/tv_item_hospital_name2"
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:layout_weight="5"
                            android:gravity="center|bottom"
                            android:text="Ankura Hospital"
                            android:textColor="#ffffff"
                            android:textSize="20sp"
                            android:transitionName="hospital"/>

                        <TextView
                            android:id="@+id/tv_item_fromtime_totime2"
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:layout_marginTop="5dp"
                            android:layout_weight="5"
                            android:gravity="center|top"
                            android:text="12:00 PM - 02:45 PM"
                            android:textColor="#ffffff"
                            android:transitionName="time"/>
                    </LinearLayout>
                </LinearLayout>
            </android.support.v7.widget.CardView>
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1.5"
        android:gravity="right|bottom">

        <android.support.v7.widget.CardView
            android:layout_width="34dp"
            android:layout_height="34dp"
            android:layout_marginRight="20dp"
            android:layout_marginBottom="5dp"
            app:cardBackgroundColor="#14BBD3"
            app:cardCornerRadius="17dp">

            <LinearLayout
                android:id="@+id/btn_sessions"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:src="@drawable/ic_arrow_right" />
            </LinearLayout>
        </android.support.v7.widget.CardView>
    </LinearLayout>
</LinearLayout>