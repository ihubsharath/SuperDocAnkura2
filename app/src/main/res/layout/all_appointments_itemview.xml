<?xml version="1.0" encoding="utf-8"?>
<com.daimajia.swipe.SwipeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/swipe"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    app:leftEdgeSwipeOffset="0dp"
    app:rightEdgeSwipeOffset="0dp">


    <LinearLayout
        android:id="@+id/left"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <com.daimajia.swipe.SwipeLayout
            android:id="@+id/swipe2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:leftEdgeSwipeOffset="0dp"
            app:rightEdgeSwipeOffset="0dp">


            <LinearLayout
                android:id="@+id/left_to_right"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:visibility="gone">

                <LinearLayout
                    android:layout_width="160dp"
                    android:layout_height="70dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="5dp"
                    android:layout_marginBottom="5dp"
                    android:weightSum="2">

                    <TextView
                        android:id="@+id/checkout"
                        android:layout_width="80dp"
                        android:layout_height="match_parent"
                        android:background="@drawable/cardview_background_left_curves"
                        android:gravity="center"
                        android:textSize="10sp"
                        android:text="@string/checkout"
                        android:textColor="#ffffff" />
                    <TextView
                        android:id="@+id/markFollowUp"
                        android:layout_width="80dp"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:background="#CBC7C7"
                        android:textSize="10sp"
                        android:text="@string/markfollowup"
                        android:textColor="#ffffff" />

                </LinearLayout>
                <!--</android.support.v7.widget.CardView>-->
            </LinearLayout>


            <LinearLayout
                android:id="@+id/left_to_right_undo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <android.support.v7.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="70dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="5dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginBottom="5dp"
                    app:cardCornerRadius="10dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="80dp"
                        android:animateLayoutChanges="true"
                        android:orientation="horizontal"
                        android:weightSum="4">
                        <!--layout_timer-->
                        <LinearLayout
                            android:id="@+id/layout_timer"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="4"
                            android:gravity="center"
                            android:orientation="horizontal"
                            android:visibility="gone"
                            android:weightSum="10">

                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight="2.5">

                                <TextView
                                    android:id="@+id/tv_time2"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:gravity="center"
                                    android:text="11:20"
                                    android:textColor="@color/colorPrimaryDark"
                                    android:textSize="15sp" />
                            </LinearLayout>

                            <View
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_marginTop="15dp"
                                android:layout_marginBottom="15dp"
                                android:layout_weight="0.05"
                                android:background="#CBC7C6" />

                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight="5.45"
                                android:orientation="vertical"
                                android:weightSum="10">

                                <TextView
                                    android:id="@+id/tv_patient_name2"
                                    android:layout_width="match_parent"
                                    android:layout_height="0dp"
                                    android:layout_weight="5"
                                    android:gravity="center|bottom"
                                    android:text="Mallareddy"
                                    android:singleLine="true"
                                    android:textColor="#555555"
                                    android:textSize="15sp" />

                                <TextView
                                    android:id="@+id/tv_procedure2"
                                    android:layout_width="match_parent"
                                    android:layout_height="0dp"
                                    android:layout_marginTop="5dp"
                                    android:layout_weight="5"
                                    android:singleLine="true"
                                    android:textSize="10sp"
                                    android:gravity="center|top"
                                    android:text="Consultation"
                                    android:textColor="#555555" />
                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight="2"
                                android:gravity="center"
                                android:orientation="vertical">

                                <TextView
                                    android:id="@+id/tv_status_2"
                                    android:layout_width="30dp"
                                    android:layout_height="15dp"
                                    android:singleLine="true"
                                    android:textSize="10sp"
                                    android:background="@color/colorPrimaryDark"
                                    android:gravity="center"
                                    android:text="IN"
                                    android:textColor="#ffffff" />

                                <Chronometer
                                    android:id="@+id/chronometer"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:gravity="center_vertical"
                                    android:text="01:12"
                                    android:textSize="20sp" />
                                <!--<ImageView-->
                                <!--android:layout_width="0dp"-->
                                <!--android:layout_height="50dp"-->
                                <!--android:layout_gravity="center_vertical"-->
                                <!--android:layout_weight="1"-->
                                <!--android:src="@drawable/ic_watch" />-->

                                <!--<ImageView-->
                                <!--android:layout_width="0dp"-->
                                <!--android:layout_height="match_parent"-->
                                <!--android:layout_weight="0.8" />-->

                                <!--<Chronometer-->
                                <!--android:id="@+id/chronometer"-->
                                <!--android:layout_width="0dp"-->
                                <!--android:layout_height="match_parent"-->
                                <!--android:layout_weight="2.2"-->
                                <!--android:gravity="center_vertical"-->
                                <!--android:text="18:23"-->
                                <!--android:textColor="#ffffff"-->
                                <!--android:textSize="20sp"-->
                                <!--android:textStyle="bold" />-->

                            </LinearLayout>
                        </LinearLayout>
                        <!--layout_undo-->
                        <LinearLayout
                            android:id="@+id/layout_undo"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="4"
                            android:orientation="horizontal">

                            <LinearLayout
                                android:id="@+id/tvStartConsult"
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight="2"
                                android:background="@color/colorPrimaryDark"
                                android:gravity="center"
                                android:orientation="vertical"
                                android:weightSum="2">

                                <TextView
                                    android:id="@+id/tvStart"
                                    android:layout_width="match_parent"
                                    android:layout_height="0dp"
                                    android:layout_weight="1"
                                    android:gravity="center|bottom"
                                    android:text="START"
                                    android:textSize="10sp"
                                    android:textColor="#ffffff" />

                                <TextView
                                    android:id="@+id/tvConsult"
                                    android:layout_width="match_parent"
                                    android:layout_height="0dp"
                                    android:layout_weight="1"
                                    android:gravity="center|top"
                                    android:text="CONSULT"
                                    android:textSize="10sp"
                                    android:textColor="#ffffff" />
                            </LinearLayout>

                            <LinearLayout
                                android:id="@+id/undo"
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight="2"
                                android:weightSum="2"
                                android:background="@color/colorPrimaryDark"
                                android:orientation="horizontal">

                                <TextView
                                    android:id="@+id/tvUndoText"
                                    android:layout_width="0dp"
                                    android:layout_height="match_parent"
                                    android:layout_weight="1.2"
                                    android:gravity="right"
                                    android:text="UNDO"
                                    android:textSize="15sp"
                                    android:textColor="#ffffff" />

                                <ImageView
                                    android:id="@+id/ivUndoImage"
                                    android:layout_width="0dp"
                                    android:layout_weight="0.5"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center_vertical"
                                    android:src="@drawable/ic_undo" />

                                <LinearLayout
                                    android:layout_width="0dp"
                                    android:layout_height="match_parent"
                                    android:layout_weight="0.3" />
                            </LinearLayout>
                        </LinearLayout>
                    </LinearLayout>
                </android.support.v7.widget.CardView>
            </LinearLayout>


        </com.daimajia.swipe.SwipeLayout>
    </LinearLayout>


    <LinearLayout
        android:id="@+id/right_to_left"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <!--<android.support.v7.widget.CardView-->
        <!--android:layout_width="wrap_content"-->
        <!--android:layout_height="80dp"-->
        <!--android:layout_marginBottom="5dp"-->
        <!--android:layout_marginTop="5dp">-->

        <LinearLayout
            android:layout_width="150dp"
            android:layout_height="70dp"
            android:layout_marginTop="5dp"
            android:layout_marginRight="10dp"
            android:layout_marginBottom="5dp"
            android:weightSum="2">

            <TextView
                android:id="@+id/cancel"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="#E76D99"
                android:gravity="center"
                android:textSize="10sp"
                android:text="CANCEL"
                android:textColor="#ffffff" />

            <TextView
                android:id="@+id/noshow"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/cardview_background_right_curves"
                android:gravity="center"
                android:text="NO SHOW"
                android:textSize="10sp"
                android:textColor="#ffffff" />
        </LinearLayout>
        <!--</android.support.v7.widget.CardView>-->
    </LinearLayout>


    <FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="5dp"
                android:layout_marginRight="10dp"
                android:layout_marginBottom="5dp"
                app:cardBackgroundColor="#ffffff"
                app:cardCornerRadius="10dp">

                <LinearLayout
                    android:id="@+id/cardview_item"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="2.5">

                        <TextView
                            android:id="@+id/tv_time"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:gravity="center"
                            android:text="11:20"
                            android:textColor="#555555"
                            android:textSize="15sp" />
                    </LinearLayout>

                    <View
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_marginTop="15dp"
                        android:layout_marginBottom="15dp"
                        android:layout_weight="0.05"
                        android:background="#CBC7C6" />

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="5.45"
                        android:orientation="vertical"
                        android:weightSum="10">

                        <TextView
                            android:id="@+id/tv_patient_name"
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:layout_weight="5"
                            android:gravity="center|bottom"
                            android:text="Mallareddy"
                            android:singleLine="true"
                            android:textColor="#707070"
                            android:textSize="15sp" />

                        <TextView
                            android:id="@+id/tv_procedure"
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:layout_marginTop="5dp"
                            android:layout_weight="5"
                            android:singleLine="true"
                            android:gravity="center|top"
                            android:textSize="10sp"
                            android:text="Consultation"
                            android:textColor="#555555" />
                    </LinearLayout>
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="2"
                    android:gravity="center"
                    android:orientation="vertical">
                    <TextView
                        android:id="@+id/tv_status"
                        android:layout_width="30dp"
                        android:layout_height="15sp"
                        android:text="OUT"
                        android:textSize="10sp"
                        android:paddingLeft="5dp"
                        android:singleLine="true"
                        android:textColor="#ffffff"
                        android:background="#CBC7C7"/>
                </LinearLayout>
                </LinearLayout>
            </android.support.v7.widget.CardView>
        </FrameLayout>
        <ImageView
            android:visibility="gone"
            android:id="@+id/isFirst"
            android:layout_width="35dp"
            android:layout_height="30dp"
            android:gravity="center"
            android:layout_marginTop="8dp"
            android:layout_gravity="left"
            android:layout_marginLeft="-5dp"
            android:background="@drawable/ic_labelnew2" />
        <ImageView
            android:visibility="gone"
            android:id="@+id/isWalkin"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:gravity="center"
            android:layout_gravity="left"
            android:layout_marginTop="25dp"

            android:src="@drawable/walkin" />
    </FrameLayout>


</com.daimajia.swipe.SwipeLayout>
