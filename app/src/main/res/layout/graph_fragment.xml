<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/graphLayout">
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="0dp"
    android:layout_weight="0.2"
    android:orientation="vertical"
    android:background="@drawable/top"
    android:gravity="center">
    <TextView
        android:id="@+id/tv_summary"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        android:text="SUMMARY"
        android:textColor="#ffffff"/>
    <TextView
        android:id="@+id/tv_hospital_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="15sp"
        android:layout_marginTop="10dp"
        android:text="Ankura Hospital Boduppal"
        android:textColor="#ffffff"/>
    <TextView
        android:id="@+id/tv_from_to_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="15sp"
        android:text="12:00 PM - 03:00 PM"
        android:textColor="#ffffff"/>
</LinearLayout>




    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.15"
        android:gravity="center"
        android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/tv_avg_wait_time_text"
            android:layout_width="0dp"
            android:layout_weight="0.5"
            android:gravity="right"
            android:layout_marginRight="20dp"
            android:layout_height="wrap_content"
            android:text="Avg Wiat Time"/>
        <TextView
            android:id="@+id/tv_avg_wait_time_value"
            android:layout_width="0dp"
            android:layout_weight="0.5"
            android:textColor="#FF7C7C"
            android:layout_height="wrap_content"
            android:text="12 mnts"/>
    </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/tv_consultaion_duration_text"
                android:layout_width="0dp"
                android:layout_weight="0.5"
                android:gravity="right"
                android:layout_marginRight="20dp"
                android:layout_height="wrap_content"
                android:text="Consultation Duration"/>
            <TextView
                android:id="@+id/tv_consultaion_duration_value"
                android:layout_width="0dp"
                android:layout_weight="0.5"
                android:textColor="#14BBD3"
                android:layout_height="wrap_content"
                android:text="7 mnts"/>
    </LinearLayout>
    </LinearLayout>



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:gravity="center"
        android:layout_weight="0.2">
        <com.github.mikephil.charting.charts.PieChart
            android:id="@+id/piechart"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="10dp"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.4"
        android:layout_marginLeft="40dp"
        android:layout_marginRight="40dp"
        android:orientation="horizontal">
        <View
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:background="#CBC7C7"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="bottom"
            android:orientation="horizontal">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="bottom"
                android:layout_marginBottom="10dp"
                android:orientation="horizontal">
            <LinearLayout
                android:id="@+id/layoutOne"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.3"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="15dp"
                android:orientation="vertical">
                <TextView
                    android:id="@+id/tvAppts"
                    android:layout_width="match_parent"
                    android:gravity="bottom|center"
                    android:text="Appts"
                    android:padding="5dp"
                    android:textSize="10sp"
                    android:layout_height="wrap_content" />
                <TextView
                    android:id="@+id/value_one"
                    android:layout_width="30dp"
                    android:layout_gravity="center"
                    android:gravity="bottom|center"
                    android:background="#14BBD3"
                    android:textColor="#ffffff"
                    android:text="10"
                    android:layout_height="wrap_content" />
                <TextView
                    android:id="@+id/one"
                    android:layout_width="30dp"
                    android:layout_gravity="center"
                    android:gravity="bottom"
                    android:background="#14BBD3"
                    android:layout_height="wrap_content" />
            </LinearLayout>
            <LinearLayout
                android:id="@+id/layoutTwo"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.3"
                android:orientation="vertical">
                <TextView
                    android:id="@+id/tvWalkins"
                    android:layout_width="match_parent"
                    android:gravity="bottom|center"
                    android:text="Walkins"
                    android:padding="5dp"
                    android:textSize="10sp"
                    android:layout_height="wrap_content" />
                <TextView
                    android:id="@+id/value_two"
                    android:layout_width="30dp"
                    android:layout_gravity="center"
                    android:gravity="bottom|center"
                    android:background="#317BA9"
                    android:textColor="#ffffff"
                    android:text="5"
                    android:layout_height="wrap_content" />
                <TextView
                    android:id="@+id/two"
                    android:layout_width="30dp"
                    android:layout_gravity="center"
                    android:gravity="bottom"
                    android:background="#317BA9"
                    android:layout_height="wrap_content" />
            </LinearLayout>
            <LinearLayout
                android:id="@+id/layoutThree"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.3"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:orientation="vertical">
                <TextView
                    android:id="@+id/tvCancel"
                    android:layout_width="match_parent"
                    android:gravity="bottom|center"
                    android:text="Cancel"
                    android:padding="5dp"
                    android:textSize="10sp"
                    android:layout_height="wrap_content" />
                <TextView
                    android:id="@+id/value_three"
                    android:layout_width="30dp"
                    android:layout_gravity="center"
                    android:gravity="bottom|center"
                    android:background="#FF7C7C"
                    android:textColor="#ffffff"
                    android:text="3"
                    android:layout_height="wrap_content" />
                <TextView
                    android:id="@+id/three"
                    android:layout_width="30dp"
                    android:layout_gravity="center"
                    android:gravity="bottom"
                    android:background="#FF7C7C"
                    android:layout_height="wrap_content" />
            </LinearLayout>
            <LinearLayout
                android:id="@+id/layoutFour"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.3"
                android:orientation="vertical">
                <TextView
                    android:id="@+id/tvNoshow"
                    android:layout_width="match_parent"
                    android:gravity="bottom|center"
                    android:text="No-Show"
                    android:padding="5dp"
                    android:textSize="10sp"
                    android:layout_height="wrap_content" />
                <TextView
                    android:id="@+id/value_four"
                    android:layout_width="30dp"
                    android:layout_gravity="center"
                    android:gravity="bottom|center"
                    android:background="#CBC7C7"
                    android:textColor="#ffffff"
                    android:text="4"
                    android:layout_height="wrap_content" />
                <TextView
                    android:id="@+id/four"
                    android:layout_width="30dp"
                    android:layout_gravity="center"
                    android:gravity="bottom"
                    android:background="#CBC7C7"
                    android:layout_height="wrap_content" />
            </LinearLayout>
            </LinearLayout>

        </LinearLayout>
    </LinearLayout>
    <View
        android:layout_width="300dp"
        android:layout_height="1dp"
        android:layout_marginLeft="40dp"
        android:background="#CBC7C7"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.05"/>
</LinearLayout>